{% extends 'base.html.twig' %}

{% block title %}Auteur index{% endblock %}

{% block body %}
    <h1 align="center">Auteurs</h1>

    <table class="table m-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_prenom</th>
                <th>Sexe</th>
                <th>Date_naissance</th>
                <th>Nationalite</th>
                <th></th>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.nomPrenom }}</td>
                <td>{{ auteur.sexe }}</td>
                <td>{{ auteur.dateNaissance ? auteur.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ auteur.nationalite }}</td>
                <td>
                    <a href="{{ path('auteur_show', {'id': auteur.id}) }}">show</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
